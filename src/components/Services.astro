---
// Componente Services
import { Image } from "astro:assets";
import { services } from "@/data/site.js";
---

<section id="services" class='services"'>
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4 md:gap-12">
      <div class="md:col-span-2">
        <span class="section-name icon-right animate-in-up">
          <span class="section-name-caption py-8">Services</span>
          <i class="ph ph-arrow-down-right"></i>
        </span>
      </div>

      <!-- Contenido principal -->
      <div class="md:col-span-8 flex flex-col gap-12 md:gap-36">
        <!-- Título de la sección -->

        <h2 class="reveal-type animate-in-up">My Dev's force</h2>
        <!--  <p class="animate-in-up"></p> -->

        <!-- Grid de servicios -->

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          {
            services.map((service, index) => (
              <div class="service-card cards__item ">
                <div class="cards__card flex  rounded-[3.5rem]  flex-col gap-8 p-6 ">
                  <div class="pt-6 grow ">
                    <h5
                      class="cards__title services-title animate-in-up "
                      set:html={service.title}
                    />
                    <p class="small grow animate-in-up ">{service.description}</p>
                  </div>

                  <Image
                    width={800}
                    height={533}
                    src={service.image}
                    alt={service.alt}
                    class="service-image aspect-video object-cover rounded-4xl "
                  />
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
